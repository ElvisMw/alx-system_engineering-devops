#!/usr/bin/env bash
# This script lists files in the current directory, displaying only the part after the first dash.

# Use a for loop to iterate through files in the current directory
for file in *
do
    # Check if the file is not a hidden file and contains a dash
    if [[ ! "$file" == .* && "$file" == *-* ]]
    then
        # Use parameter expansion to extract the part of the name after the first dash
        name_after_dash="${file#*-}"
        echo "$name_after_dash"
    fi
done
