#!/usr/bin/env bash
# This script displays numbers from 1 to 20 with custom messages for certain iterations.

# Initialize a counter
count=1

# 'while loop' to iterate from 1 to 20
while [ "$count" -le 20 ]
do
    # Use a case statement to display messages based on the iteration number
    case $count in
        4)
            echo "4"
            echo "bad luck from China"
            ;;
        9)
            echo "9"
            echo "bad luck from Japan"
            ;;
        17)
            echo "17"
            echo "bad luck from Italy"
            ;;
        *)
            echo "$count"
            ;;
    esac

    # Increment the counter
    ((count++))
done
