#!/usr/bin/env bash
# This script displays the time for 12 hours and 59 minutes.

# Initialize the hour and minute counters
hour=0
minute=1

# Use a while loop to display the time
while [ "$hour" -le 12 ]; do
    # Display the current hour
    echo "Hour: $hour"

    # Display the minutes from 1 to 59
    while [ "$minute" -le 59 ]; do
        echo "$minute"
        ((minute++))
    done

    # To reset the minute counter for the next hour
    minute=1

    # To increment the hour counter
    ((hour++))
done
